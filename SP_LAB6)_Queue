#include<stdio.h>
#include<stdlib.h>
#include<conio.h>



struct Red
{
	int el;
	struct Red* Next;

};

void Push(struct Red*);
void Pop(struct Red*);



int main()
{

	struct Red root = { 0,NULL };
	char a = 0;

	while (a != 27)
	{
		printf("\n Unesi:");
		printf("\n\t 1   - Push");
		printf("\n\t 2   - Pop");
		printf("\n\t ESC - Kraj\n\n\t");

		a = _getch();

		switch (a)
		{
		case '1':
			Push(&root);
			break;
		case '2':
			Pop(&root);
			break;
		case 27:
			printf("\nKraj!\n");
			break;
		default:
			printf("\nPogresan unos\n");
		}

	}






	
	
	return 0;
}


void Push(struct Red* R)
{
	struct Red *q;
	static struct Red *last = NULL;

	if (R->Next == NULL)
		last = R;


	q = (struct Red *)malloc(sizeof(struct Red));

	if (q == NULL)
		printf("\nGreska kod alokacije memorije!!");
	else
	{
		printf("\n\tUnesi element:  ");
		scanf_s(" %d", &q->el);


		q->Next = NULL;

		last->Next = q;

		last = q;
	}

}

void Pop(struct Red *R)
{
	struct Red *q;

	if (NULL == R->Next)
		printf("\nRed je prazan\n");
	else
	{
		printf("\n Sa reda se skida: %d \n", R->Next->el);

		q = R->Next;
		R->Next = q->Next;

		free(q);
	}
}
